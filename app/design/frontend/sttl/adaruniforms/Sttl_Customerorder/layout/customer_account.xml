<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="page.messages" destination="content" after="header.custom.login"/>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-navigation-customerorder-link-custom">
                <arguments>
                    <argument name="path" xsi:type="string">customerorder/customer/index</argument>
                    <argument name="label" xsi:type="string">My Custom Link</argument>
                </arguments>
            </block>
        </referenceBlock>
   </body>
</page>
