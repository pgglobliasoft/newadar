<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <feature>
            <general_settings>
                <enabled>1</enabled>
                <route>shop-by-feature</route>
            </general_settings>
            <list_page_settings>
                <title>Shop By Feature</title>
                <template>1column</template>
                <product_per_row>3</product_per_row>
                <show_feature_name>1</show_feature_name>
                <show_product_count>1</show_product_count>
                <show_featured_features>1</show_featured_features>
                <meta_keywords>shop by feature</meta_keywords>
                <meta_description>Magento Shop By Feature</meta_description>
                <description>Magento Shop By Feature</description>
            </list_page_settings>
            <view_page_settings>
                <template>1column</template>
                <image_width>1240</image_width>
                <image_height>600</image_height>
            </view_page_settings>
            <product_page_settings>
                <show_feature>1</show_feature>
				<show_feature_img>1</show_feature_img>
                <small_image_width>240</small_image_width>
				<show_feature_img_sidebar>1</show_feature_img_sidebar>
                <show_related_products_by_feature>1</show_related_products_by_feature>
                <title_related_products>Related Products By Feature</title_related_products>
                <perrow_related_products>4</perrow_related_products>
                <limit_related_products>5</limit_related_products>
            </product_page_settings>
            <sidebar_settings>
                <enabled>1</enabled>
                <show_product_count>1</show_product_count>
                <number_of_features>5</number_of_features>
            </sidebar_settings>
        </feature>
    </default>
</config>